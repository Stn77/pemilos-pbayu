[mysqld]
# Basic settings
max_connections = 200
max_allowed_packet = 64M
thread_cache_size = 50
table_open_cache = 4000
table_definition_cache = 2000

# InnoDB settings - optimized untuk 16GB RAM
innodb_buffer_pool_size = 8G          # 50% dari total RAM
innodb_log_file_size = 512M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2    # Lebih cepat, acceptable untuk production
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_buffer_pool_instances = 4      # Untuk multi-threading

# Query cache (MySQL 5.7 only, disabled di MySQL 8.0+)
# query_cache_type = 1
# query_cache_size = 64M
# query_cache_limit = 2M

# Connection timeout
wait_timeout = 600
interactive_timeout = 600

# Temp tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Slow query log untuk monitoring
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2

# Binary logging (untuk replication/backup)
log_bin = /var/log/mysql/mysql-bin.log
expire_logs_days = 7
max_binlog_size = 100M

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
